<div class="col-md-12 login">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <h4>Se connecter</h4>
    <div class="form-group">
      <%= f.email_field :email, placeholder: "Email",class: "form-control input-lg", autofocus: true %>
    </div>

    <div class="form-group">
      <%= f.password_field :password, placeholder: "Mot de passe", class: "form-control input-lg", autocomplete: "off" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="form-group">
        <%= f.check_box :remember_me %>
        <%= f.label :se_souvenir_de_moi %>
      </div>
    <% end -%>

    <div class="form-group">
      <%= f.submit "Se connecter", class: "btn btn-primary btn-lg btn-block" %>
    </div>
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <span><%= link_to "mot de passe oubliÃ©?", new_password_path(resource_name) %></span>
    <% end -%>
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <span class="pull-right"><%= link_to "S'inscrire", new_registration_path(resource_name) %></span>
    <% end -%>
  <% end %>
</div>


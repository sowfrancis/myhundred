<h1>Edit Profile</h1>
<hr>
<div class="row">
    <!-- left column -->
  <div class="form_edit">
    <%= form_for @user do |f| %>
      <div class="col-md-5">
        <div class="text-center">
          <img id='img-upload' class="avatar img-circle"/>
          <h6>Upload a different photo...</h6>

          <%=f.file_field :avatar, class: "btn btn-default btn-file", type: "file", id: "imgInp"%>
        </div>
      </div>
      <div class="col-md-7 personal-info">
        <div class="form-group">
          <div class="form-group">
            <%= f.text_field :first_name, class: "control-label" %>
          </div>
          <div class="form-group">
            <%= f.text_field :last_name, class: "control-label" %>
          </div>
          <%= f.submit "OK" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<hr>
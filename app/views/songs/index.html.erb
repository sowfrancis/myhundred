<div class="row">
  <div class="col-md-6 col-lg-6">
    <div class="blog-stripe">
      <% if @songs.present? %>
        <%= link_to song_path(@song), class: "pull-left" do %>
          <img src="<%= @song.image.url %>" alt="" class="feature">
        <% end %>
        <div class="block-title">
          <h2 class="text-center">Latest Song Updates</h2>
          <p class="name text-center"><small><%= @song.name%></small></p>
        </div>
      <% end %>
    </div>
  </div>
  <div class="col-md-6 col-lg-6">
    <% if params[:q].present? %>
      <%= render "search/search_result" %>
    <% else %>
      <% @songs.each do |song| %>
        <ul class="all-blogs">
          <li class="media">
            <%= link_to song_path(song), class: "pull-left" do %>
              <img src="<%= song.image.url%>" alt="..." class="img_song">
            <% end %>
            </a>
            <div class="media-body">
              <h4 class="media-heading"></h4>
              <p class="name"><%= song.user.email%></p>
            </div>
            <%= link_to "Ajouter", add_song_songs_path(song) %>
            <%= link_to "Add Friend", friendships_path(friend_id: song.user.id), :method => :post %>
          </li>
        </ul>
      <% end %>
    <%end %>
  </div>
</div>
